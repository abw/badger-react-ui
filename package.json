{
  "name": "@abw/badger-react-ui",
  "version": "1.3.13",
  "description": "React UI Components",
  "type": "module",
  "main": "dist/badger-react-ui.umd.cjs",
  "module": "dist/badger-react-ui.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/badger-react-ui.umd.cjs",
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/badger-react-ui.js"
      }
    },
    "./config/*": "./dist/config/*",
    "./styles/*": "./dist/styles/*"
  },
  "files": [
    "dist/*"
  ],
  "scripts": {
    "dev": "vite --config vite.docs.js",
    "test": "vitest --ui --coverage",
    "build:css": "bin/build-css.sh",
    "build:docs": "vite build --config vite.docs.js",
    "build:lib": "tsc && vite build",
    "build": "$npm_execpath build:lib && $npm_execpath build:docs && $npm_execpath build:css",
    "preview": "vite preview --config vite.docs.js",
    "lint": "eslint",
    "TMP-lint": "eslint 'src/**/*.{js,ts,jsx,tsx}'",
    "OLD-lint": "eslint 'web/**/*.{js,jsx}' 'src/**/*.{js,jsx}'"
  },
  "keywords": [
    "Badger",
    "React",
    "UI"
  ],
  "author": "Andy Wardley",
  "license": "ISC",
  "homepage": "https://badgerpower.com/badger-react-ui/",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/abw/badger-react-ui.git"
  },
  "bugs": {
    "url": "https://github.com/abw/badger-react-ui/issues"
  },
  "dependencies": {
    "@abw/badger-css": "^1.2.6",
    "@abw/badger-form": "^1.1.3",
    "@abw/badger-icon": "1.0.0-alpha-2",
    "@abw/badger-maths": "^0.0.1",
    "@abw/badger-utils": "1.2.4",
    "@abw/react-context": "2.3.0-alpha-5",
    "@abw/react-one-louder": "1.0.0-alpha-2",
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/modifiers": "^7.0.0",
    "@dnd-kit/sortable": "^8.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@floating-ui/react": "^0.26.28"
  },
  "devDependencies": {
    "@abw/badger-timestamp": "^1.1.2",
    "@abw/badger-website": "^0.3.3",
    "@abw/react-night-and-day": "^0.0.6",
    "@mdx-js/react": "^3.1.0",
    "@mdx-js/rollup": "^3.1.0",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.2.0",
    "@testing-library/user-event": "^14.6.0",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "@vitejs/plugin-react-swc": "^3.7.2",
    "@vitest/coverage-v8": "^2.1.8",
    "@vitest/ui": "^2.1.8",
    "eslint": "^9.18.0",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.18",
    "globals": "^15.14.0",
    "history": "^5.3.0",
    "jsdom": "^24.1.3",
    "react-router": "^6.28.0",
    "react-router-dom": "^6.28.0",
    "rehype-mdx-code-props": "^3.0.1",
    "rollup-plugin-copy": "^3.5.0",
    "sass": "1.78.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0",
    "vite": "^5.4.11",
    "vite-jsconfig-paths": "^2.0.1",
    "vite-plugin-svgr": "^4.3.0",
    "vitest": "^2.1.8"
  },
  "peerDependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
}
